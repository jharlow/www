{% if postListItems.length %}
  <div class="inner-wrapper">
    <section class="post-list">
      <h2 class="post-list__heading">{{ postListHeading }}</h2>
      <ol class="post-list__items" reversed>
        {% for item in postListItems %}
          {% if item.date.getTime() <= global.now %}
            <li class="post-list__item">
              <div class="post-list__details-container">
                <h3 class="post-list__title">
                  <a href="{{ item.url }}" class="post-list__link" rel="bookmark">{{ item.data.title }}</a>
                </h3>
                <p class="post-list__date">
                  <time datetime="{{ item.date | w3DateFilter }}">{{ item.date | dateFilter }}</time>
                </p>
                <p class="post-list__description">{{ item.data.description }}</p>
              </div>
              <div class="post-list__thumbnail">
                <figure>
                  {% shasvg item.data.title %}
                  <figcaption>A geometric pattern built agorithmically from a SHA of the post</figcaption>
                </figure>
              </div>
            </li>
          {% endif %}
        {% endfor %}
      </ol>
    </section>
  </div>
{% endif %}
